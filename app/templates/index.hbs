{{page-title "Restaurant"}}

<div class="container mx-auto">
  <div class="mb-2">
    <h2 class="text-3xl font-bold">Welcome to Restaurant!</h2>
    <p>We hope you find exactly what you're looking for to eat.</p>
  </div>

  <div class="w-auto">
    <div class="grid grid-cols-4 gap-4">
      {{#each @model as |result|}}
      <Dish @data={{result}} />
      {{/each}}
    </div>
  </div>

  <LinkTo
    @route="dish"
    class="button"
  >
    <button
      class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
      type="button"
    >
      Order
    </button>
  </LinkTo>
</div>

{{outlet}}